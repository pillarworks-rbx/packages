// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "languages": {
    "Luau": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["-"],
        },
      },
    },
  },

  "lsp": {
    "luau-lsp": {
      "settings": {
        "luau-lsp": {
          "require": {
            "mode": "relativeToFile",

            "directoryAliases": {
              "@lune/": "~/.lune/.typedefs/x.y.z/",
            },
          },

          "ignoreGlobs": [],

          "sourcemap": {
            "enabled": true,
            "autogenerate": true,
            "rojoProjectFile": "default.project.json",
            "includeNonScripts": true,
            "sourcemapFile": "sourcemap.json",
          },

          "diagnostics": {
            "includeDependents": true,
            "workspace": false,
            "strictDatamodelTypes": false,
          },

          "types": {
            "definitionFiles": [],
            "disabledGlobals": [],
          },

          "inlayHints": {
            "parameterNames": "all",
            "variableTypes": false,
            "parameterTypes": false,
            "functionReturnTypes": false,
            "hideHintsForErrorTypes": false,
            "hideHintsForMatchingParameterNames": true,
            "typeHintMaxLength": 50,
            "makeInsertable": true,
          },

          "hover": {
            "enabled": true,
            "showTableKinds": false,
            "multilineFunctionDefinitions": false,
            "strictDatamodelTypes": true,
            "includeStringLength": true,
          },

          "completion": {
            "enabled": true,
            "autocompleteEnd": false,

            "imports": {
              "enabled": true,
              "suggestServices": true,
              "suggestRequires": true,
              "requireStyle": "Auto",
              "stringRequires": {
                "enabled": false,
              },

              "separateGroupsWithLine": false,
              "ignoreGlobs": [],
            },

            "addParentheses": true,
            "addTabstopAfterParentheses": true,
            "fillCallArguments": true,
            "showPropertiesOnMethodCall": false,
            "enableFragmentAutocomplete": false,
          },

          "signatureHelp": {
            "enabled": true,
          },

          "index": {
            "enabled": true,
            "maxFiles": 10000,
          },
        },

        "roblox": {
          "enabled": true,
          "security_level": "plugin",
          "download_api_documentation": true,
          "download_definitions": true,
        },

        "fflags": {
          "enable_by_default": false,
          "enable_new_solver": true,
          "sync": true,
          "override": {},
        },

        "binary": {
          "ignore_system_version": false,
          "path": null,
          "args": [],
        },

        "plugin": {
          "enabled": true,
          "port": 3667,
          "proxy_path": null,
        },

        "definitions": [],
        "documentation": [],
      },
    },
  },
}
